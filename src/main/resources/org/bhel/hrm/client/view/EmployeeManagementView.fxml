<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" styleClass="employee-container"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.EmployeeManagementController">

    <!-- Page Header -->
    <fx:include source="components/PageHeader.fxml" fx:id="pageHeader"/>

    <!-- Search and Add Button Bar -->
    <HBox alignment="CENTER_LEFT" spacing="10" >
        <TextField fx:id="searchField"
                   promptText="Search employees by name or IC..."
                   HBox.hgrow="ALWAYS"/>
        <Button fx:id="searchButton" text="Search"
                onAction="#handleSearch"/>
        <Button fx:id="clearSearchButton" text="Clear"
                onAction="#handleClearSearch"/>
        <Button fx:id="addNewButton" text="Add New Employee"
                styleClass="button-primary"
                onAction="#handleAddNewEmployee"/>
    </HBox>

    <!-- Employee Table -->
    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="150.0"/>
            <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="150.0"/>
            <TableColumn fx:id="icPassportColumn" text="IC/Passport" prefWidth="150.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="No employees found. Click 'Add New Employee' to get started."/>
        </placeholder>
    </TableView>

    <!-- Action Buttons Bar -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="refreshButton" text="Refresh"
                onAction="#handleRefresh"/>
        <Button fx:id="editButton" text="Edit Selected"
                onAction="#handleEditSelectedEmployee"
                disable="true"/>
        <Button fx:id="deleteButton" text="Delete Selected"
                styleClass="button-danger" disable="true"
                onAction="#handleDeleteSelectedEmployee"/>
    </HBox>
</VBox>