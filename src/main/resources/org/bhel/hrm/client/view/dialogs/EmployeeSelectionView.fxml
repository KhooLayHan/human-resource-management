<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.EmployeeSelectionController">

    <Label text="Assign Employees to Course" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label fx:id="courseTitleLabel" text="Course: [Title]" style="-fx-text-fill: #666;"/>

    <TextField fx:id="searchField" promptText="Search employees..."/>

    <ListView fx:id="employeeListView" VBox.vgrow="ALWAYS" prefHeight="300"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" cancelButton="true" onAction="#handleCancel"/>
        <Button text="Assign Selected" defaultButton="true" styleClass="button-primary" onAction="#handleAssign"/>
    </HBox>
</VBox>