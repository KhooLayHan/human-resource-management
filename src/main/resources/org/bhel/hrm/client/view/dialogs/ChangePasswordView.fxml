<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.bhel.hrm.client.controllers.ChangePasswordDialogController"
      prefWidth="600.0"
      style="-fx-padding: 20;"
      spacing="15">

    <Label text="Change Password">
        <font><Font name="System Bold" size="18"/></font>
    </Label>

    <VBox spacing="5">
        <Label text="Current Password: "/>
        <PasswordField fx:id="oldPasswordField" promptText="Required for Verification"/>
    </VBox>

    <VBox spacing="5">
        <Label text="New Password: "/>
        <PasswordField fx:id="newPasswordField" promptText="Minimum 6 characters"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Confirm New Password: "/>
        <PasswordField fx:id="confirmPasswordField" promptText="Must match new password"/>
    </VBox>

    <Label fx:id="errorLabel"
           textFill="red"
           visible="false"
           wrapText="true"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel"
                onAction="#handleCancel"
                cancelButton="true"/>
        <Button text="Update Password"
                onAction="#handleUpdate"
                styleClass="button-primary"
                defaultButton="true"/>
    </HBox>

</VBox>
