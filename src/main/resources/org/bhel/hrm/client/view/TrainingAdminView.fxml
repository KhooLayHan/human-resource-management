<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" styleClass="content-area"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.TrainingAdminController">

    <!-- Reusable Header -->
    <fx:include source="components/PageHeader.fxml" fx:id="pageHeader"/>

    <!-- Action Bar -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="searchField" promptText="Search courses..." HBox.hgrow="ALWAYS"/>
        <Button text="Search" onAction="#handleSearch"/>
        <Button text="Clear" onAction="#handleClearSearch"/>
        <Region HBox.hgrow="ALWAYS" maxWidth="20"/> <!-- Spacer -->
        <Button text="Add New Course" onAction="#handleAddCourse" styleClass="button-primary"/>
        <Button fx:id="assignButton" text="Assign Employees" onAction="#handleAssignEmployees" disable="true"/>
    </HBox>

    <!-- Courses Table -->
    <TableView fx:id="courseTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="titleColumn" text="Course Title" prefWidth="200"/>
            <TableColumn fx:id="departmentColumn" text="Department" prefWidth="100"/>
            <TableColumn fx:id="durationColumn" text="Hours" prefWidth="80"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="No training courses found. Click 'Add New Course' to create one."/>
        </placeholder>
    </TableView>

    <!-- Footer Actions -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"/>
        <Button fx:id="editButton" text="Edit Selected" onAction="#handleEditCourse" disable="true"/>
        <Button fx:id="deleteButton" text="Delete Selected" onAction="#handleDeleteCourse" styleClass="button-danger" disable="true"/>
    </HBox>

</VBox>