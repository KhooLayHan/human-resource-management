<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" styleClass="content-area"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.MyTrainingController">

    <fx:include source="../components/PageHeader.fxml" fx:id="pageHeader"/>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Refresh" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="enrollmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <!-- We will use a custom wrapper to show Course Title instead of ID -->
            <TableColumn fx:id="courseTitleColumn" text="Course Title" prefWidth="250.0"/>
            <TableColumn fx:id="departmentColumn" text="Department" prefWidth="150.0"/>
            <TableColumn fx:id="dateColumn" text="Enrollment Date" prefWidth="150.0"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="120.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="You have not enrolled in any training courses yet."/>
        </placeholder>
    </TableView>

</VBox>