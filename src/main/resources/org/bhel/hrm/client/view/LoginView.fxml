<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<GridPane alignment="CENTER" hgap="10" vgap="15" styleClass="login-container"
          xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.bhel.hrm.client.controllers.LoginController">

    <padding>
        <Insets top="40" left="40" right="40" bottom="40"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0"/>
    </columnConstraints>

    <!-- Title -->
    <VBox alignment="CENTER" spacing="5"
          GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <Label text="BHEL Human Resource Management" styleClass="login-title"/>
        <Label text="Please login to continue" styleClass="login-subtitle"/>
        <GridPane.margin>
            <Insets bottom="20"/>
        </GridPane.margin>
    </VBox>

    <!-- Username Field -->
    <Label text="Username: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" promptText="Enter your username"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Password Field -->
    <Label text="Password: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                   onAction="#handleLoginButtonAction"/>

    <!-- Login Button -->
    <HBox alignment="CENTER" spacing="10"
          GridPane.rowIndex="3" GridPane.columnIndex="1">
        <ProgressIndicator fx:id="loadingIndicator"
                           visible="false" maxHeight="20" maxWidth="20"/>
        <Button onAction="#handleLoginButtonAction" text="Log In"
                maxWidth="Infinity" HBox.hgrow="ALWAYS"
                defaultButton="true" styleClass="button-primary">
            <graphic>
                <FontIcon iconLiteral="mdi2l-login" iconSize="16" iconColor="black"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Error Label -->
    <Label fx:id="errorLabel" wrapText="true" styleClass="login-error-label"
           GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets top="10"/>
        </GridPane.margin>
    </Label>

    <!-- Optional: Remember Me and Forgot Password -->
    <HBox spacing="10" alignment="CENTER_LEFT"
          GridPane.rowIndex="5" GridPane.columnIndex="1">
        <CheckBox fx:id="rememberMeCheckbox" text="Remember me"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword"
                   styleClass="login-forgot-password-hyperlink"/>
    </HBox>
</GridPane>

