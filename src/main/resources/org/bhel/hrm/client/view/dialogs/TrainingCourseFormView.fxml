<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.TrainingCourseFormController">

    <Label text="Training Course Details" styleClass="form-title"/>
    <Separator/>

    <GridPane vgap="10" hgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" promptText="e.g. Advanced Java Programming" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Department:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="departmentCombo" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Duration (Hrs):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Spinner fx:id="durationSpinner" editable="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
        <TextArea fx:id="descriptionArea" prefRowCount="4" wrapText="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="saveButton" text="Cancel" onAction="#handleCancel" cancelButton="true"/>
        <Button fx:id="cancelButton" text="Save" onAction="#handleSave" defaultButton="true" styleClass="button-primary"/>
    </HBox>
</VBox>