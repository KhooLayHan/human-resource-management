<configuration>

    <!-- Appender to log to the console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Format: Time [Thread] Level LoggerName - Message -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender to log to a file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>hrm-app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- The root logger directs all logs to the specified appender -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- You can set specific levels for your packages -->
    <logger name="org.bhel.hrm.server" level="DEBUG" />

</configuration>